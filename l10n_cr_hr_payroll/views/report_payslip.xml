<?xml version="1.0" encoding="UTF-8" ?>
<openerp>
    <data>
    <!-- hr_payroll.report_payslip -->
        <record id="inherit_report_payslip" model="ir.ui.view">
            <field name="name">inherit.report.payslip</field>
            <field name="inherit_id" ref="hr_payroll.report_payslip"/>
            <field name="priority" eval="50"/>
            <field name="type">qweb</field>
            <field name="arch" type="xml">
            
            <xpath expr="//t/t/t/div/table[2]/tbody/tr[@t-foreach='o.line_ids.filtered(lambda line: line.appears_on_payslip)']" position="replace">
                    <tr t-foreach="o.line_ids.filtered(lambda line: line.appears_on_payslip)" t-as="p">
                        <div t-if="p.salary_rule_id.appears_on_report">
                            <td><span t-field="p.code"/></td>
                            <td><span t-field="p.name"/></td>
                            <td><span t-field="p.quantity"/></td>
                            <td><span t-esc="p.amount" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/></td>
                            <td><span t-esc="p.total" t-esc-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: o.company_id.currency_id}"/></td>
                        </div>
                    </tr>
                </xpath>
            
            </field>
        </record> 
    </data>
</openerp>
